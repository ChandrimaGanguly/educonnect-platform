# EduConnect Platform - Environment Configuration Template
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env.local (NOT .env)
# 2. Generate strong secrets using the commands below
# 3. Never commit .env.local to version control
#
# Generate secrets:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://educonnect:changeme@localhost:5432/educonnect
DB_PASSWORD=changeme
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Authentication
# =============================================================================
# CRITICAL: Generate a strong secret with:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# The application will REFUSE to start with weak/default secrets
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_128_CHARS_MINIMUM
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
MFA_ISSUER=EduConnect
BCRYPT_ROUNDS=12

# =============================================================================
# Session Management
# =============================================================================
# CRITICAL: Generate a strong secret with:
#   node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=REPLACE_WITH_STRONG_SECRET_128_CHARS_MINIMUM
SESSION_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# =============================================================================
# Email Service (SendGrid)
# =============================================================================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@educonnect.org
SUPPORT_EMAIL=support@educonnect.org

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# CDN & Assets
# =============================================================================
CDN_URL=
STATIC_ASSETS_URL=

# =============================================================================
# Python Microservices
# =============================================================================
MATCHING_SERVICE_URL=http://localhost:8001
ANALYTICS_SERVICE_URL=http://localhost:8002
CHECKPOINT_SERVICE_URL=http://localhost:8003
MODERATION_SERVICE_URL=http://localhost:8004

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_MFA=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_CAPTCHA=false

# =============================================================================
# Monitoring & Observability
# =============================================================================
SENTRY_DSN=
PROMETHEUS_PORT=9090

# =============================================================================
# Development Tools
# =============================================================================
PGADMIN_EMAIL=admin@educonnect.local
PGADMIN_PASSWORD=admin
GRAFANA_PASSWORD=admin
